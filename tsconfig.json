{
  "compilerOptions": {
    "incremental": false,
    "composite": false,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "ESNext",

    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": "./",

    /* 解析模式 */
    "moduleResolution": "Bundler",

    /* 路径别名 */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* lint 检查 */
    "strict": true
  },
  "include": ["src/**/*.ts", "scripts/*.js"],
  "exclude": ["node_modules", "dist", ".git"]
}
